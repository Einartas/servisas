<Window x:Class="servisas.BikeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:servisas"
        mc:Ignorable="d"
        Title="BikeDetailWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10" >
            
            <TextBlock Text="Bike ID:"/>
            <TextBox x:Name="BikeIdTextBox" Width="200" Margin="0,5"/>
            
            <TextBlock Text="Model:"/>
            <TextBox x:Name="ModelTextBox" Width="200" Margin="0,5"/>
            
            <TextBlock Text="Overall Condition:"/>
            <ComboBox x:Name="OverallConditionComboBox" Width="200" Margin="0,5" />

            <TextBlock Text="Coolant Level:"/>
            <ComboBox x:Name="CoolantLevelComboBox" Width="200" Margin="0,5" />

            <Button Content="Save" Click="SaveButton_Click" Width="75" HorizontalAlignment="Left" Margin="0,1"/>
                
        </StackPanel>
    </Grid>
</Window>
